page {
  background-color: #FFFFFF;
}
.login-type {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.login-type-btn {
  line-height: 30px;
  margin: 0px 15px;
}
.login-type-btn.act {
  color: #0FAEFF;
  border-bottom: solid 1px #0FAEFF;
}
.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.login {
  position: absolute;
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.login-logo {
  width: 248rpx;
  height: 242rpx;
  padding-bottom: 50rpx;
  margin: 120rpx auto 0 auto;
}
.login-logo image {
  width: 100%;
  height: 100%;
}
.login-main {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 0 70rpx;
}
.login-main .login-list {
  margin-top: 35rpx;
  height: 100rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 30rpx;
}
.login-main .login-list.border-all:after {
  border: 1px solid #D0D0D0;
  border-radius: 100rpx;
}
.login-main .login-list .iconfont {
  width: 65rpx;
  font-size: 44rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.login-main .login-list .iconfont:after {
  margin-left: 20rpx;
  content: '';
  width: 2rpx;
  height: 35rpx;
  background: #D0D0D0;
  display: block;
}
.login-main .login-list .login-input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.login-main .login-list .login-input input {
  font-size: 28rpx;
  color: #333333;
  padding-left: 20rpx;
}
.login-main .login-list .code-sx {
  content: '';
  width: 2rpx;
  height: 25rpx;
  background: #D0D0D0;
  margin-right: 25rpx;
}
.login-main .login-list .codeimg {
  font-size: 24rpx;
  color: #999999;
}
.login-main .login-btn {
  margin-top: 70rpx;
  height: 96rpx;
  width: 100%;
  background: -webkit-linear-gradient(right, #5055a8, #686ed2);
  background: linear-gradient(-90deg, #5055a8, #686ed2);
  border-radius: 47rpx;
  font-size: 34rpx;
  color: #ffffff;
}
.login-main .login-tip {
  padding-top: 26rpx;
  font-size: 22rpx;
  color: #666666;
  text-align: center;
}
.login-main .login-tip navigator {
  margin-left: 10rpx;
  display: inline-block;
  color: #5055A8;
}
.login-footer {
  padding: 0 70rpx;
}
.login-footer .footer-tip {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}
.login-footer .footer-tip:before {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  content: '';
  height: 2rpx;
  background: #D0D0D0;
  margin-right: 30rpx;
}
.login-footer .footer-tip:after {
  margin-left: 30rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  content: '';
  height: 2rpx;
  background: #D0D0D0;
}
.login-footer .footer-other {
  padding: 40rpx 0 100rpx 0;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.login-footer .footer-other .other-list {
  width: 80rpx;
  height: 80rpx;
  margin: 0 75rpx;
}
.login-footer .footer-other .other-list image {
  width: 100%;
  height: 100%;
}

