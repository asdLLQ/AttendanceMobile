.login-title {
  font-size: 70rpx;
  margin: 150rpx 0 0 120rpx;
}
.login-area {
  margin: 65rpx 7%;
  width: 86%;
  height: 680rpx;
  background: white;
  border-radius: 60rpx;
  padding: 50rpx 0rpx;
}
.login-area .zhuce {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.login-area .zhuce .login-tip {
  margin-bottom: 20rpx;
  font-size: 25rpx;
  color: #666666;
  text-align: center;
}
.login-area .zhuce .login-tip navigator {
  margin-left: 10rpx;
  display: inline-block;
  color: #0FAEFF;
}
.login-type {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.login-type-btn {
  line-height: 30px;
  margin: 0rpx 70rpx;
}
.login-type-btn.act {
  color: #0FAEFF;
  border-bottom: solid 5rpx #0FAEFF;
}
.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.login {
  position: absolute;
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  background: #eee;
}
.login-main {
  padding: 0 70rpx;
}
.login-main .login-list {
  margin-top: 40rpx;
  height: 100rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 40rpx;
}
.login-main .login-list.border-all:after {
  border: 1px solid #D0D0D0;
  border-radius: 60rpx;
}
.login-main .login-list .iconfont {
  width: 65rpx;
  font-size: 45rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.login-main .login-list .iconfont:after {
  margin-left: 20rpx;
  content: '';
  width: 2rpx;
  height: 35rpx;
  background: #D0D0D0;
  display: block;
}
.login-main .login-list .login-input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.login-main .login-list .login-input input {
  font-size: 28rpx;
  color: #333333;
  padding-left: 20rpx;
}
.login-main .login-list .code-sx {
  content: '';
  width: 2rpx;
  height: 25rpx;
  background: #D0D0D0;
  margin-right: 25rpx;
}
.login-main .login-list .codeimg {
  font-size: 24rpx;
  color: #999999;
}
.login-main .login-btn {
  margin-top: 50rpx;
  height: 96rpx;
  width: 100%;
  background: #1CBBB4;
  border-radius: 50rpx;
  font-size: 35rpx;
  color: #ffffff;
}
.msg-err {
  color: red;
  text-align: center;
  line-height: 1em;
  margin-top: 30rpx;
}
.login-footer {
  padding: 100rpx 70rpx;
}
.login-footer .footer-tip {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}
.login-footer .footer-tip:before {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  content: '';
  height: 2rpx;
  background: #D0D0D0;
  margin-right: 30rpx;
}
.login-footer .footer-tip:after {
  margin-left: 30rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  content: '';
  height: 2rpx;
  background: #D0D0D0;
}
.login-footer .footer-other {
  padding: 40rpx 0 100rpx 0;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.login-footer .footer-other .other-list {
  width: 80rpx;
  height: 80rpx;
  margin: 0 50rpx;
}
.login-footer .footer-other .other-list image {
  width: 100%;
  height: 100%;
}

